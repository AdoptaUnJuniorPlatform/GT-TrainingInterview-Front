{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "types": ["node"], // Include node types here
    "typeRoots": ["node_modules/@types"] // Optional: specify where to find types
  },
  "include": ["vite.config.ts"]
}
